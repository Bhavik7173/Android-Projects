            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:drawableRight="@drawable/menu_right_arrow_menu"
            android:gravity="start"
            android:text="Liked Events"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/disliked_events"
            style="@style/profileDetailsTextMain"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:drawableRight="@drawable/menu_right_arrow_menu"
            android:gravity="start"
            android:text="Disiked Events"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/interested_events"
            style="@style/profileDetailsTextMain"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:drawableRight="@drawable/menu_right_arrow_menu"
            android:gravity="start"
            android:text="Interested Events"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/applied_jobs"
            style="@style/profileDetailsTextMain"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:drawableRight="@drawable/menu_right_arrow_menu"
            android:gravity="start"
            android:text="Applied Jobs"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/about_me"
            style="@style/profileDetailsTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@color/transparent"
            android:gravity="start"
            android:text="About Me"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/company_profile"
            style="@style/profileDetailsTextMain"
            android:layout_width="match_parent"
