<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/loginCard"
        app:cardCornerRadius="@dimen/loginCardRadius"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:layout_marginBottom="@dimen/loginViewsMargin"
        android:background="@color/whiteCardColor">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#960808"
            android:id="@+id/view_topBorder"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#960808"
            android:id="@+id/Parrot_Color"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#960808"
            android:layout_gravity="bottom"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#960808"
            android:layout_gravity="right"/>

        <LinearLayout
            style="@style/linearParent"
            android:layout_gravity="center"
            android:background="@color/whiteCardColor"
            android:padding="@dimen/loginViewsMargin">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:id="@+id/escape"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/edit"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:onClick="edit"
                    android:textColor="#960808"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_border_color_black_24dp"
                    android:drawableStart="@drawable/ic_border_color_black_24dp"
                    />
                <Button
                    android:id="@+id/delete"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:onClick="delete"
                    android:layout_marginLeft="20dp"
                    android:textColor="#960808"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_delete_black_24dp"
                    android:drawableStart="@drawable/ic_delete_black_24dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/CN"
                android:textStyle="bold"
                android:text="Company Name"
                android:textAllCaps="true"
                android:textSize="22sp"
                style="@style/headerTextPrimary"
                android:layout_marginTop="@dimen/loginViewsMargin"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView

                    android:layout_width="44dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"

                    android:src="@drawable/ic_date_range_black_24dp" />
                <com.google.android.material.textfield.TextInputLayout

                    style="@style/parent"
                    android:textColor="#960808"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="0dp">
                    <EditText
                        style="@style/modifiedEditText"
                        android:id="@+id/CDOJ"
                        android:editable="false"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageView

                    android:layout_width="44dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"

                    android:src="@drawable/ic_date_range_black_24dp" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/parent"
                    android:textColor="#960808"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="0dp">
                    <EditText
                        style="@style/modifiedEditText"
                        android:id="@+id/CDOL"
                        android:textStyle="bold"
                        android:editable="false"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginLeft="7dp"
                    android:textColor="#960808"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:text="Date Of\nJoining"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:textColor="#960808"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:text="     Date Of\n     Leaving"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView

                    android:layout_width="44dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/ic_computer_black_24dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/parent"
                    android:textColorHint="#960808"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="0dp">
                    <EditText
                        style="@style/modifiedEditText"
                        android:id="@+id/CP"
                        android:editable="false"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:textColor="#960808"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Position"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView

                    android:layout_width="44dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/ic_attach_money_black_24dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/parent"
                    android:textColorHint="#960808"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="0dp">
                    <EditText
                        style="@style/modifiedEditText"
                        android:id="@+id/CS"
                        android:editable="false"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="0dp"
                android:textColor="#960808"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:text="  Salary"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>