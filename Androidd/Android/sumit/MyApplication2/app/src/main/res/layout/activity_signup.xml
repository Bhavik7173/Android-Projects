<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/loginParent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.NoActionBar">

    <TextView
        style="@style/TitleText"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:text="Sign Up"
        android:textColor="@color/main" />

    <androidx.cardview.widget.CardView
        style="@style/loginCard"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:layout_marginBottom="@dimen/loginViewsMargin"
        android:background="@color/whiteCardColor"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/main1"
        app:cardCornerRadius="@dimen/loginCardRadius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idEdtFirstName"
                style="@style/parent"
                android:layout_marginTop="10dp"
                android:hint="Your Full Name"
                android:textColorHint="@color/main">

                <EditText
                    android:id="@+id/fname"
                    style="@style/modifiedEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textColor="@color/main" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Your Mobile No"
                android:textColorHint="@color/main">

                <EditText
                    android:id="@+id/idEdtPhoneNumber"
                    style="@style/modifiedEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:importantForAutofill="yes"
                    android:inputType="phone"
                    android:textColor="@color/main" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idEdtPhoneNumber1"
                style="@style/parent"
                android:layout_marginTop="10dp"
                android:hint="New Password"
                android:textColorHint="@color/main"
                app:passwordToggleDrawable="@drawable/show_password_selector"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/main">

                <EditText
                    android:id="@+id/idEdtPassword"
                    style="@style/modifiedEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textColor="@color/main" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idEdtAadharCard"
                style="@style/parent"
                android:layout_marginTop="10dp"
                android:hint="Aadhaar Card"
                android:textColorHint="@color/main">

                <EditText
                    android:id="@+id/idEdtAadharProof"
                    style="@style/modifiedEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textColor="@color/main" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idEdtPANCard"
                style="@style/parent"
                android:layout_marginTop="10dp"
                android:hint="PAN Card ID"
                android:textColorHint="@color/main">

                <EditText
                    android:id="@+id/idEdtPANProof"
                    style="@style/modifiedEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textColor="@color/main" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/QRCode"
                style="@style/parent"
                android:layout_marginTop="10dp"
                android:hint="PAN Card ID"
                android:textColorHint="@color/main">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/idIVQrcode"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/qr_code" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/idBtnSubmit"
                style="@style/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:onClick="submit"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/whiteCardColor" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>