<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/rpb_default_corner_radius"/>
            <solid android:color="@color/rpb_default_progress_bg_color"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="@dimen/rpb_default_corner_radius"/>
                <solid android:color="@color/rpb_default_progress_color"/>
            </shape>
        </scale>
    </item>
</layer-list>
