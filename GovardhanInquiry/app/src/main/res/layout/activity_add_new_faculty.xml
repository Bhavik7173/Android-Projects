<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        tools:ignore="HardcodedText">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fnameEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Name">

            <EditText
                android:id="@+id/fnameEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bhavik"
                android:layout_margin="12dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dobEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Date Of Birth">

            <EditText
                android:id="@+id/dobEdt"
                android:layout_width="match_parent"
                android:text="2022/8/17"
                android:layout_height="match_parent"
                android:layout_margin="12dp" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dojEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Date Of Joining">

            <EditText
                android:id="@+id/dojEdt"
                android:layout_width="match_parent"
                android:text="2022/8/17"
                android:layout_height="match_parent"
                android:layout_margin="12dp" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fmobileEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Mobile">

            <EditText
                android:id="@+id/fmobileEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:text="7894561230"
                android:inputType="numberDecimal" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fwhatsappEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Whatsapp No">

            <EditText
                android:id="@+id/fwhatsappEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1234567890"
                android:layout_margin="12dp"
                android:inputType="numberDecimal" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/femailEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Email">

            <EditText
                android:id="@+id/femailEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:text="Any"
                android:inputType="textEmailAddress" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fyoeEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Year Of Experience">

            <EditText
                android:id="@+id/fyoeEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:text="2"
                android:inputType="number" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/faddressEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Address">

            <EditText
                android:id="@+id/faddressEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:text="Any"
                android:inputType="text" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/frefernecenameEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Reference Name">

            <EditText
                android:id="@+id/frefernecenameEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Any"
                android:layout_margin="12dp"
                android:inputType="text" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/frefernecenoEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Reference No">

            <EditText
                android:id="@+id/frefernecenoEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:text="Any"
                android:inputType="text" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ftechnologyEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Technology">

            <EditText
                android:id="@+id/ftechnologyEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:inputType="text" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fnoteEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Note">

            <EditText
                android:id="@+id/fnoteEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:inputType="text" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fqualificationEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Qualification">

            <Button
                android:id="@+id/fqualificationEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:padding="15dp"
                android:text="Qualification"
                android:textColor="@color/white"
                android:background="@drawable/blue_border_rounded_cornwe"
                android:backgroundTint="#2B6673" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fresumeEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Resume">

            <Button
                android:id="@+id/fresumeEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="@drawable/blue_border_rounded_cornwe"
                android:backgroundTint="#2B6673"
                android:text="Resume Upload"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/faadharEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Aadhar Crad">

            <Button
                android:padding="2dp"
                android:id="@+id/faadharEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="@drawable/blue_border_rounded_cornwe"
                android:backgroundTint="#2B6673"
                android:text="Aadhar Card Upload"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fphotoEdttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:hint="Photo">

            <Button
                android:id="@+id/fphotoEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="@drawable/blue_border_rounded_cornwe"
                android:backgroundTint="#2B6673"
                android:text="Photo Upload"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/fsubmit_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:backgroundTint="#2B6673"
            android:text="Submit"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>