<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.SampleTableLayout">

    <TableRow>

        <TextView
            android:width="400px"
            android:text="Enter User Name" />

        <EditText
            android:id="@+id/text_uname"
            android:width="600px" />
    </TableRow>

    <TableRow>

        <TextView
            android:width="400px"
            android:text="Enter Email Add" />

        <EditText
            android:id="@+id/text_uemail"
            android:width="600px" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/login"
            android:width="1100px"
            android:text="Login" />
    </TableRow>
</TableLayout>